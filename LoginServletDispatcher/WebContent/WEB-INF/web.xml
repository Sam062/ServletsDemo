<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">


	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>lcs</servlet-name>
		<servlet-class>com.app.LoginCheckServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>lcs</servlet-name>
		<url-pattern>/logincheck</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>adm</servlet-name>
		<servlet-class>com.app.AdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adm</servlet-name>
		<url-pattern>/admins</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>usr</servlet-name>
		<servlet-class>com.app.UserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>usr</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>


</web-app>